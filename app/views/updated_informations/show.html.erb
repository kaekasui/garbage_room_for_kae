<%- model_class = @updated_information.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:display_at) %>:</strong></dt>
  <dd><%= @updated_information.display_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @updated_information.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:news) %>:</strong></dt>
  <dd><%= @updated_information.news %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @updated_information.comment %></dd>
</dl>
