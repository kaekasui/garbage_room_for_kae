<a name="mail_form"></a>
<p id="notice"><%= notice %></p>

<%= form_for :mail_form, html: {class: "form-vertical"}, url: mail_forms_path do |f| %>

  <div class="control-group">
  <%= f.label :name, class: "control-label" %>
    <div class="controls">
  <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
  <%= f.label :mail, class: "control-label" %>
    <div class="controls">
  <%= f.text_field :mail %>
    </div>
  </div>

  <div class="control-group">
  <%= f.label :content, class: "control-label" %>
    <div class="controls">
  <%= f.text_area :content, class: "span3", rows: "4" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
  <%= f.submit class: "btn" %>
    </div>
  </div>

<% end %>
