<%= form_for @admin_blog, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :create_at, class: 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :created_at, datetime_separator: "ã€€", include_seconds: true, use_month_numbers: true, class: "date_time" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contents1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :contents1, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contents2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :contents2, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_blogs_path, :class => 'btn' %>
  </div>
<% end %>
